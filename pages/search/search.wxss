@import "../portal/room-item/room-item.wxss";
@import "image-box/image-box.wxss";

.area-box {
    margin: 10rpx 15rpx 0;
}

.title {
    padding-left: 20rpx;
    font-size: 16px;
    line-height: 24px;
    height: 24px;
    font-family: MicroSoft Yahei;
    color: #fff;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 500rpx;
}

.list-container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.list-container .box-border {
    margin: 10rpx;
    width: 340rpx;
}

page {
    height: 100%;
    background-color: #000;
}

.search-box {
    margin: 10px 20rpx 10px;
    display: flex;
    height: 40px;
}

.search-box .input-box {
    flex: 7;
}

.search-box .button-box {
    flex: 2;
}

.search-box .input-box input {
    line-height: 40px;
    height: 40px;
    padding: 0 30rpx 0;
    background: #fff;
    font-size: 12px;
    border-radius: 10rpx 0 0 10rpx;
}

.search-box .button-box button {
    height: 40px;
    line-height: 40px;
    text-align: center;
    padding: 0 10rpx;
    font-size: 12px;
    color: #fff!important;
    background: #62c8f6;
    border: 1px solid #62c8f6!important;
    border-radius: 0 10rpx 10rpx 0;
}